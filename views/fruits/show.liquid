{% layout 'layout.liquid' %}

{% block content %}
    <p>Fruit name: {{fruit.name}}</p>
    <p>Fruit color: {{fruit.color}}</p>
    <a href="/fruits/{{fruit._id}}/edit">Edit Fruit</a>
    <form action="/fruits/{{fruit._id}}?_method=DELETE" method="POST">
        <input type="submit" value="Delete">
    </form>
{% endblock %}